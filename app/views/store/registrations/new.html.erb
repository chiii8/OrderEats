<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-center mb-5">店舗新規会員登録</h4>
    </div>
    <div class="row">
      <div class="col-md-12 offset-6">
        <%= form_with model: @store, url: store_registration_path do |f| %>
          <%= render "store/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>店舗名</td>
                <td>
                  <%= f.text_field :name, :placeholder => "店舗名" %>
                </td>
              </tr>
              <tr>
                <td>住所</td>
                <td>
                  <%= f.text_field :address, :placeholder => "住所", size: 40 %>
                </td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td>
                  <%= f.text_field :telephone_number, size: 30, :placeholder => "00000000000" %>
                </td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40, :placeholder => "aaa@gmail.com" %>
                </td>
              </tr>
              <tr>
                <td>パスワード</td>
                <td>
                  <%= f.password_field :password, size: 30, :placeholder => "パスワード(６文字以上)" %>
                </td>
              </tr>
              <tr>
                <td>パスワード(確認用)</td>
                <td>
                  <%= f.password_field :password_confimation, size: 30, :placeholder => "パスワード(確認用)" %>
                </td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "新規登録", class: 'btn btn-success pl-5 pr-5 pt-1 pb-1 mb-5' %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
        <div class="border-line">
          <hr class="hr1">
        </div>
        <div class="link mt-4 text-center">
          <span style="font-size:15px;">
            アカウントをお持ちの場合、ログインは<%= link_to "こちら", new_store_session_path %>から
          </span>
        </div>
      </div>
    </div>
  </div>
</div>