<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h4><strong>注文情報確認</strong></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td rowspan="4">
              <%= image_tag cart_item.item.get_image(150, 150) %>
            </td>
            <td>
              <strong><%= cart_item.item.name %></strong>
            </td>
            <tr class="border-top">
              <td>数量 <%= cart_item.quantity %></td>
              <td>¥<%= cart_item.item.with_tax_price %></td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td><%= cart_item.subtotal %></td>
              <% @total = @total + cart_item.subtotal %>
            </tr>
          </tr>
        </tbody>
        <% end %>
      </table>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>手数料</td>
            <td><%= @order.fee %></td>
          </tr>
          <tr>
            <td>支払金額</td>
            <td><%= @total + @order.fee %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
      <div class="action">
        <%= form_with model: @order, url: orders_path, method: :post do |f| %>
          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <%= f.hidden_field :fee %>
          <%= f.hidden_field :payment_amount, value: @total + @order.fee %>
          <%= f.hidden_field :payment_method %>
          <%= f.submit "注文を確定する", class: 'btn btn-success shodow-sm btn-sm pr-5 pl-5' %>
        <% end %>
      </div>
    </div>
  </div>
</div>