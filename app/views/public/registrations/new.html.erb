<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>新規会員登録</h4>
    </div>
    <div class="row">
      <div class="col-md-10">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>名前</td>
                <td>
                  <%= f.text_field :last_name %> <%= f.text_field :first_name %>
                </td>
              </tr>
              <tr>
                <td>フリガナ</td>
                <td>
                  <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
                </td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </td>
              </tr>
              <tr>
                <td>生年月日</td>
                <td>
                  
                </td>
              </tr>
              <tr>
                <td>性別</td>
                <td>
                  
                </td>
              </tr>
              <tr>
                <td>パスワード</td>
                <td>
                  <%= f.password_field :password %>
                </td>
              </tr>
              <tr>
                <td>パスワード(確認用)</td>
                <td>
                  <%= f.password_field :password_confimation %>
                </td>
              </tr>
              <tr>
                <td><%= f.submit "新規登録", class: 'btn btn-success pl-5 pr-5 pt-2 pb-2' %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>