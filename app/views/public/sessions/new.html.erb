<div class="container">
  <div class=="row">
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="col-md-4 offset-5 mb-5">
      <h4>Order Eats</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <h5>メールアドレス</h5>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "aaa@gmail.com", size: 40, class: "mb-3" %>
      </div>
      <div class="field">
        <h5>パスワード</h5>
        <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード(6文字以上)", size: 40, class: "mb-5" %>
      </div>
      <div class="action offset-1">
        <%= f.submit "ログイン", class: "btn btn-primary pr-5 pl-5" %>
      </div>
      <% end %>
      <div class="border-line">
        
      </div>
      <div class="link mt-5">
        <h6>アカウントをお持ちでない場合、登録は<%= link_to "こちら", new_customer_registration_path %>から</h6>
      </div>
    </div>
  </div>
</div>