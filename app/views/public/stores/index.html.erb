<div class="container">
  <div class="row">
    <div class="offset-2 col-lg-8">
      <% @stores.each do |store| %>
      <%= link_to store_items_path(store) do %>
        <%= image_tag store.get_image(300, 300) %>
      <% end %>
      <% if customer_signed_in? %>
        <% if store.favorited_by?(current_customer) %>
          <%= link_to store_favorite_path(store), method: :delete do %>
            <i class="fa-solid fa-heart-circle-check"></i>
          <% end %>
        <% else %>
          <%= link_to store_favorite_path(store), method: :post do %>
            <i class="fa-regular fa-heart"></i>
          <% end %>
        <% end %>
      <% end %>
        <div class="border-line">
          <hr class="hr1">
        </div>
        <h6><strong><%= store.name %></strong> <%= store.address %></h6>
      <% end %>
    </div>
  </div>
</div>
<%= paginate @stores %>