<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h4><strong><%= @store.name %></strong></h4>
    </div>
  </div>
  <div class="row mb-5">
    <% @items.each do |item| %>
      <div class="col-lg-2">
        <%= link_to store_item_path(@store, item) do %>
          <%= image_tag item.get_image(170, 170) %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <p><strong><%= item.name %></strong></p>
        <p><%= item.introduction %></p>
        <p>¥<%= item.price %></p>
        <p>
          <% if item.is_active %>
            <span class="text-success"><strong>販売中</strong></span>
          <% else %>
            <span class="text-danger"><strong>販売停止中</strong></span>
          <% end %>
          <% if item.favorited_by?(current_customer) %>
            <%= link_to request.referer, method: :delete do %>
              ♡<%= item.favorite.count %>いいね
            <% end %>
          <% else %>
            <%= link_to request.referer, method: :post do %>
              ♡<%= item.favorites.count %>いいね
            <% end 
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>