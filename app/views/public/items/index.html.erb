<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h4><strong>商品一覧</strong></h4>
    </div>
  </div>
  <div class="row mb-5">
    <% @items.each do |item| %>
      <div class="col-lg-2">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(170, 170) %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <p><strong><% item.name %></strong></p>
        <p><%= item.introduction %></p>
        <p>¥<%= item.price %></p>
        <p>
          <% if item.is_active %>
            <span class="text-success"><strong>販売中</strong></span>
          <% else %>
            <span class="text-danger"><strong>販売停止中</strong></span>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @items %>