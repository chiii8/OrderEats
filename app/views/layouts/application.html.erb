<!DOCTYPE html>
<html>
  <head>
    <title>OrderEats</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <%= render 'layouts/header_customer' %>
      <% elsif admin_signed_in? %>
        <%= render 'layouts/header_admin' %>
      <% else %>
        <%= render 'layouts/header_before' %>
      <% end %>
    </header>
    <main>
      <% flash.each do |messege_type, messege| %>
        <div class="flash-message <%= messege_type %> alert alert-danger text-center col-md-4 offset-4"><%= messege %></div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
